{
	"type":"object",
	"$schema": "http://json-schema.org/draft-04/schema",
	"id": "People",
	"properties":{
		"_id": {"type": "string"},
		"_rev": {"type": "string"},
		"_deleted": {"type":"boolean"},
		"etag": {"type": ["string", "number"]},
		"form": {"enum": ["People"]},

		"about": {"type":"string"},
		"accounts": {
			"type":"array",
			"items":
				{
					"type":"object",
					"properties":{
						"agreedToTerms": {"type":"boolean"},
						"aliases": {
							"type":"array",
							"items":
								{"type":"string"}
						},
						"changePasswordAtNextLogin": {"type":"boolean"},
						"creationTime": {"type":"string"},
						"customerId": {	"type":"string"},
						"emails": {
							"type":"array",
							"items":
								{
									"type":"object",
									"properties":{
										"address": {"type":"string"},
										"primary": {"type":"boolean"}
									}
								}
						},
						"includeInGlobalAddressList": {"type":"boolean"},
						"ipWhitelisted": {"type":"boolean"},
						"isAdmin": {"type":"boolean"},
						"isDelegatedAdmin": {"type":"boolean"},
						"isMailboxSetup": {"type":"boolean"},
						"kind": {"type":"string"},
						"lastLoginTime": {"type":"string"},
						"name": { "$ref": "#/definitions/name"},
						"nonEditableAliases": {
							"type":"array",
							"items":
								{"type":"string"}
						},
						"orgUnitPath": {"type":"string"},
						"phones": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"type": {"type": "string"},
									"value": {"type": "string"}
								}
							}
						},
						"primaryEmail": {"type":"string"},
						"suspended": {"type":"boolean"},
						"type": {"type":"string"},
						"thumbnailPhotoUrl": {"type":"string"}
					}
				}
		},
		"googleId": {"type":"string"},
		"groups": {
			"type":"array",
			"items":
				{"type":"string"}
		},
		"isActive": {"type":"string"},
		"jazzHubId": {"type":"string"},
		"lastSynchronized": {"type":"string"},
		"mBox": {"type":"string"},
		"manager": {
			"type":"object",
			"properties":{
				"name": {
					"type":"object",
					"properties":{
						"familyName": {"type":"string"},
						"fullName": {"type":"string"},
						"givenName": {"type":"string"}
					}
				},
				"resource": {"type":"string"}
			}
		},
		"name": { "$ref": "#/definitions/name"},
		"phone": {"type":"string"},
		"primaryRole": { "$ref": "#/definitions/resourceOrNull"}, 
		"resource": {"type":"string"},
		"skypeId": {"type":"string"},
		"thumbnail": {"type":"string"},
		"vacationCapacity": {"type":"number"},
		"skills":  {
			"type":"array",
			"items": {
				"type": "object",
				"properties": {
					"proficiency": "number",
					"type": {"$ref" : "#/definitions/resource"}
				}
			}
		}
	},
	"required": ["form", "name", "about"],
	"definitions": {
		"resource": {
			"type":"object",
			"properties":{
				"resource": {"type":"string"},
				"name": {"type":"string"}
			},
			"required": ["resource"]
		},
		"resourceOrNull": {
			"type": ["object", "null"],
			"properties":{
				"resource": {"type":"string"},
				"name": {"type":"string"}
			},
			"required": ["resource"]
		},
		"name": {
			"type":"object",
			"properties":{
				"familyName": {"type":"string"},
				"fullName": {"type":"string"},
				"givenName": {"type":"string"}
			}
		}
	}
}

