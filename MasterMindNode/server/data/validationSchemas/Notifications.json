{
	"type":"object",
	"$schema": "http://json-schema.org/draft-04/schema",
	"id": "Notifications",
	"properties":{
		"_id": {"type":"string"},
		"_rev": {"type":"string"},
		"_deleted": {"type":"boolean"},
		"etag": {"type": ["string", "number"]},
		"form": {"enum": ["Notifications"]},
		"created": {"type": "string", "format": "date-time"},
		"header": {"type":"string"},
		"icon": {"type":"string"},
		"person": {
			"type":"object",
			"properties":{
				"resource": {"type":"string"},
				"name": {"type":"string"}
			},
			"required": ["resource"]
		},
		"text": {"type":"string", "prohibited_values": [""]},
		"type": {"type":"string", "prohibited_values": [""]},
	    "details": {"type": "object"}
    },
	"required": ["person", "type", "text"]
}
