{
	"type":"object",
	"$schema": "http://json-schema.org/draft-04/schema",
	"id": "Notifications",
	"required":true,
	"properties":{
		"_id": {"type":"string"},
		"_rev": {"type":"string"},
		"etag": {"type": ["string", "number"]},
		"form": {"type":"string"},
		"created": {"type": "string", "format": "date-time"},
		"header": {"type":"string"},
		"icon": {"type":"string"},
		"person": {
			"type":"object",
			"properties":{
				"resource": {"type":"string"},
				"name": {"type":"string"}
			},
			"required": ["resource"]
		},
		"text": {"type":"string"},
		"type": {"type":["string", "enum"]}
	},
	"required": ["person", "type", "text"]
}
