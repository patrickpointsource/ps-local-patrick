{
	"type":"object",
	"$schema": "http://json-schema.org/draft-04/schema",
	"id": "SecurityRoles",
	"properties":{
		"_id": {"type":"string"},
		"_rev": {"type":"string"},
		"_deleted": {"type":"boolean"},
		"etag": {"type": ["string", "number"]},
		"form": {"enum": ["SecurityRoles"]},		
		"name": {"type":"string"},
		"created": {"type":"string"	},
		"resources": {
			"type":"array",			
			"items": {
				"type": "object",
				"properties": {
					"name": { "type": "string"},
					"permissions": {
						"type" : "array",
						"uniqueItems": true,
						"items": {"type" : "string"}
					},
					"required": ["name", "permissions"]
				}
			}
		},
		"resource" : {"type": "string"},
		"about": {"type": "string"}
	},
	"required" : ["form", "name", "resources"]
}
