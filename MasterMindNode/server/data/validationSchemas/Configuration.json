{
	"type":"object",
	"$schema": "http://json-schema.org/draft-04/schema",
	"id": "Configuration",
	"properties":{
		"_id": {"type":"string"},
		"_rev": {"type":"string"},
		"_deleted": {"type":"boolean"},
		"etag": {"type": ["string", "number"]},
		"form": {"enum": ["Configuration"]},
		"config": {"type": "string"},
		"created": {"type": "string", "format": "date-time"},
		"properties": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {"type": "string"},
					"value": {"type": "string"}
				},
				"required": ["name", "value"]				
			}
		},
		"resource": {"type":"string"},
		"about": {"type":"string"}
	},
	"required": ["form", "config", "properties"]
}
