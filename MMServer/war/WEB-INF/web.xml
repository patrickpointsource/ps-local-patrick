<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  
 <servlet>
  <servlet-name>users</servlet-name>
  <servlet-class>com.pointsource.mastermind.server.UsersServlet</servlet-class>
</servlet>

<servlet>
  <servlet-name>oauth2</servlet-name>
  <servlet-class>com.pointsource.mastermind.server.OAuthServlet</servlet-class>
</servlet>

<servlet>
  <servlet-name>oauth2callback</servlet-name>
  <servlet-class>com.pointsource.mastermind.server.OAuthCallbackServlet</servlet-class>
</servlet>

<servlet>
	  <servlet-name>restSdkService</servlet-name>
	  <servlet-class>
	    org.apache.wink.server.internal.servlet.RestServlet
	  </servlet-class>
	  <init-param>
	    <param-name>applicationConfigLocation</param-name>
	    <param-value>/WEB-INF/providers;/WEB-INF/resources</param-value>
	  </init-param>
	  <load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>restSdkService</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>oauth2</servlet-name>
    <url-pattern>/oauth2</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>oauth2callback</servlet-name>
    <url-pattern>/oauth2callback</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>users</servlet-name>
    <url-pattern>/mmserver/users</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
